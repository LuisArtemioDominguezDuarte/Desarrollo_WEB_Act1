        <script type = "text/javascript">
            var lim = prompt("proporcione el tama√±o de la matriz")
            var matriz = new Array();
            for(i=0;i<lim; i++){
                for(j=0;j<lim;j++){
                    if(i==j){
                        matriz[i]=1;
                    }else{
                        matriz[i]= 0;
                    }
                    document.write(matriz[i]+" ");
                }
                document.write("<br>");
            }
           alert("La matriz ya se dibujo");
        </script>

        
